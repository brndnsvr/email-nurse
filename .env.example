# Email Nurse Environment Configuration
# Copy this file to .env and fill in your values

# AI Provider Selection (claude, openai, ollama)
EMAIL_NURSE_AI_PROVIDER=claude

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-...
EMAIL_NURSE_CLAUDE_MODEL=claude-sonnet-4-20250514

# OpenAI API (alternative)
OPENAI_API_KEY=sk-...
EMAIL_NURSE_OPENAI_MODEL=gpt-4o

# Ollama (local models)
EMAIL_NURSE_OLLAMA_HOST=http://localhost:11434
EMAIL_NURSE_OLLAMA_MODEL=llama3.2

# Processing Settings
EMAIL_NURSE_CONFIDENCE_THRESHOLD=0.7
EMAIL_NURSE_DRY_RUN=true

# Sync Settings (for daemon mode)
EMAIL_NURSE_SYNC_INTERVAL_MINUTES=5
EMAIL_NURSE_PROCESS_INTERVAL_MINUTES=1

# Paths (optional, defaults shown)
# EMAIL_NURSE_CONFIG_DIR=~/.config/email-nurse
# EMAIL_NURSE_RULES_FILE=rules.yaml
# EMAIL_NURSE_TEMPLATES_FILE=templates.yaml

# Logging
EMAIL_NURSE_LOG_LEVEL=INFO
# EMAIL_NURSE_LOG_FILE=/var/log/email-nurse.log
